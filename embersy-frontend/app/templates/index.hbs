{{#if fastboot.isFastBoot}}
	{{partial 'fastboot-loading'}}
{{else}}
    {{#if session.isAuthenticated}}
        <p>You are logged in, fetching credentials...</p>
        {{#if sessionAccount.profile}}
        <p>
            User ID : {{ sessionAccount.profile.user.id }}
            <br>
            Username : {{ sessionAccount.profile.user.username }}
        </p>
        {{/if}}
    {{else}}
        <div style="min-height: 100vh;">
            <div style="display: flex; flex-direction: column; width: 100%; height: 100%; justify-content: center; align-items: center;">
                <h1>Welcome to Embersy!</h1>
                <p>
                    Your nifty kickstart package for building ambitious web apps!
                </p>
            </div>
            <br>
            <br>
            <div class="pure-g">
                <div class="pure-u-1-3" style="text-align:center;">
                    <img width="200" height="200" alt="EmberJS" src="/img/ember.png"/>
                    <p>Ember</p>
                </div>
                <div class="pure-u-1-3" style="text-align:center;">
                    <p style="font-size:64px; text-align:center;">+</p>
                </div>
                <div class="pure-u-1-3" style="text-align:center;">
                    <img width="200" height="200" alt="Symfony" src="/img/symfony.png"/>
                    <p>Symfony</p>
                </div>
            </div>
        </div>
    {{/if}}
{{/if}}