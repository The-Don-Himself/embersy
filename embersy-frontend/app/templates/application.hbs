<div id="layout" class="pure-g">
    <div class="sidebar pure-u-1 pure-u-md-1-4">
        <div class="header">
            <h1 class="brand-title">
                {{link-to 'Embersy' 'index'}}
            </h1>

            <h2 class="brand-tagline">
                Your nifty kickstart package for building ambitious web apps
            </h2>

            <nav class="nav">
                <ul class="nav-list">
                    <li class="nav-item">
                        <a class="pure-button" href="https://github.com/campus-discounts/embersy">Download</a>
                    </li>
                    <li class="nav-item">
                        {{link-to 'About' 'about' class='pure-button'}}
                    </li>
                </ul>
            </nav>
            {{#if session.isAuthenticated}}
                <br>
                <br>
                <nav class="nav">
                    <ul class="nav-list">
                        <li class="nav-item">
                            <button id="logout" {{action "logout" on="click"}} type="button" class="pure-button pure-button-primary">
                                Logout
                            </button>
                        </li>
                    </ul>
                </nav>
            {{/if}}
        </div>
    </div>

    <div class="content pure-u-1 pure-u-md-3-4">

        {{outlet}}

        <div class="footer">
            <div class="pure-menu pure-menu-horizontal">
                <ul>
                    <li class="pure-menu-item">
                        {{link-to 'Home' 'index' class='pure-menu-link'}}
                    </li>
                    <li class="pure-menu-item">
                        {{link-to 'About' 'about' class='pure-menu-link'}}
                    </li>
                    <li class="pure-menu-item">
                        {{link-to 'Login' 'login' class='pure-menu-link'}}
                    </li>
                    <li class="pure-menu-item">
                        {{link-to 'Register' 'register' class='pure-menu-link'}}
                    </li>
                    <li class="pure-menu-item">
                        {{link-to 'Users' 'users' class='pure-menu-link'}}
                    </li>
                </ul>
            </div>
        </div>

    </div>
</div>